<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <h1>Create a New Listing</h1>
        <br>
        <form action="/listings"method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        <div>
           <label for="title" class="form-label">Title:</label><br>
           <input class="form-control" placeholder="Enter Title" name="listing[title]" required>
            <div class="invalid-feedback">
                Please provide a valid name.
            </div>
        </div>

        <div>
           <label for="description" class="form-label">Description:</label><br>
           <textarea class="form-control" placeholder="Description" name="listing[description]" required></textarea>
            <div class="invalid-feedback">
               please provide a short description..
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-8">
               <label for="image" class="form-label">Upload Image:</label><br>
               <input class="form-control" type="file" name="listing[image]" />
            </div>
            <div class="mb-3 col-md-4">
                <label for="category" class="form-label">Category:</label><br>
                <select class="form-control" id="category" name="listing[category]">
                    <option value="beach">Beach</option>
                    <option value="iconic-cities">Iconic Cities</option>
                    <option value="mountains">Mountains</option>
                    <option value="heritage">Heritage</option>
                    <option value="unique-stays">Unique Stays</option>
                    <option value="lake">Lake</option>
                    <option value="luxury">Luxury</option>
                    <option value="wildlife">Wildlife</option>
                </select>
            </div>
        </div>


    <div class="row">
        <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price per night:</label><br>
        <input class="form-control"placeholder="1000" type="number" id="price" name="listing[price]" required>
         <div class="invalid-feedback">
             Please provide a valid price.
         </div>
      </div>

        <div class="mb-3 col-md-8">
         <label for="country" class="form-label">Country:</label><br>
         <input class="form-control"placeholder="India" type="text" id="country" name="listing[country]" required>
            <div class="invalid-feedback">
              Please provide a valid country.
            </div>
        </div>
    </div>

        <div>
           <label for="location" class="form-label">Location:</label><br>
           <input class="form-control"placeholder="Patna,Bihar" type="text" id="location" name="listing[location]" required>
            <div class="invalid-feedback">
               Please provide a valid city.
            </div>
        </div>

        <div class="mb-3">
            <h5>Coordinates (Optional - Leave blank to auto-generate from location)</h5>
            <div class="row">
                <div class="col-md-6">
                    <label for="latitude" class="form-label">Latitude:</label>
                    <input class="form-control" name="listing[latitude]" type="number" step="any" placeholder="e.g., 25.5941">
                </div>
                <div class="col-md-6">
                    <label for="longitude" class="form-label">Longitude:</label>
                    <input class="form-control" name="listing[longitude]" type="number" step="any" placeholder="e.g., 85.1376">
                </div>
            </div>
            <small class="form-text text-muted">If you provide coordinates, they will override the auto-generated coordinates from the location field.</small>
        </div> <br>
       
        <button class="btn  dark-btn button" type="submit">Add Listing</button>
    </form>
    <br><br>
    </div>
</div>

