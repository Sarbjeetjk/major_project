<% layout("/layouts/boilerplate") %>
    <div class="col-8 offset-2">
    <h3>Here you can edit your details</h3>
     <form method="POST" action="/listings/<%=listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data" >

        <div class="mb-3">
        <label for="title">Title:</label>
        <input name="listing[title]" value="<%=listing.title %>" class="form-control" required>
        <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please provide a valid name.
    </div>
        </div>

        <div class="mb-3">
        <label for="description">Description:</label>
        <textarea rows="4" cols="30" class="form-control" required name="listing[description]"><%=listing.description %> </textarea>
        <div class="valid-feedback">
      Looks good!
    </div>
     <div class="invalid-feedback">
      Please provide a short description.
    </div>
        </div>

        <div class="mb-3">
          original listing image <br>
      <img src="<%=  originalImageUrl %>">
        </div>
        <div class="mb-3">
        <label for="image">Upload New Image:</label>
        <input name="listing[image]" type="file" class="form-control"><br>
        </div>


    <div class="row">
        <div class="mb-3 col-md-4">
        <label for="price">Price per night:</label>
        <input name="listing[price]" value="<%=listing.price %>" class="form-control" required>
         <div class="invalid-feedback">
      Please provide a valid price.
    </div>
        </div>

        <div class="mb-3 col-md-8">
        <label for="country">Country:</label>
        <input name="listing[country]" value="<%=listing.country %>" class="form-control"required><br>
        </div>
         <div class="invalid-feedback">
      Please provide a valid country.
    </div>
    </div>

        <div class="mb-3">
        <label for="location">Location:</label>
        <input name="listing[location]" value="<%=listing.location %>" class="form-control" required>
         <div class="invalid-feedback">
      Please provide a valid city.
    </div>
        </div>

        <div class="mb-3">
        <label for="category">Category:</label>
        <select class="form-control" id="category" name="listing[category]">
            <option value="beach" <%= listing.category === 'beach' ? 'selected' : '' %>>Beach</option>
            <option value="iconic-cities" <%= listing.category === 'iconic-cities' ? 'selected' : '' %>>Iconic Cities</option>
            <option value="mountains" <%= listing.category === 'mountains' ? 'selected' : '' %>>Mountains</option>
            <option value="heritage" <%= listing.category === 'heritage' ? 'selected' : '' %>>Heritage</option>
            <option value="unique-stays" <%= listing.category === 'unique-stays' ? 'selected' : '' %>>Unique Stays</option>
            <option value="lake" <%= listing.category === 'lake' ? 'selected' : '' %>>Lake</option>
            <option value="luxury" <%= listing.category === 'luxury' ? 'selected' : '' %>>Luxury</option>
            <option value="wildlife" <%= listing.category === 'wildlife' ? 'selected' : '' %>>Wildlife</option>
        </select>
        </div>

        <div class="mb-3">
            <h5>Coordinates (Optional - Leave blank to auto-generate from location)</h5>
            <div class="row">
                <div class="col-md-6">
                    <label for="latitude">Latitude:</label>
                    <input name="listing[latitude]" value="<%=listing.geometry && listing.geometry.coordinates ? listing.geometry.coordinates[1] : '' %>" class="form-control" type="number" step="any" placeholder="e.g., 25.5941">
                </div>
                <div class="col-md-6">
                    <label for="longitude">Longitude:</label>
                    <input name="listing[longitude]" value="<%=listing.geometry && listing.geometry.coordinates ? listing.geometry.coordinates[0] : '' %>" class="form-control" type="number" step="any" placeholder="e.g., 85.1376">
                </div>
            </div>
            <small class="form-text text-muted">If you provide coordinates, they will override the auto-generated coordinates from the location field.</small>
        </div> <br>
    
        

        <button class="btn btn-dark button" type="submit">Edit</button>
    </form>
    <br><br>
    </div>

