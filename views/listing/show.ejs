<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
      <div class="col-8 offset-2 ">
          <div class="card col-10 offset-1  show-card">
              <div class="show-edits">    
                  <h2>Detail @: <b><%= listing.title %> </b> </h2>
                  <img src="<%= listing.image %>" alt="Listing Image" style="width:670px;height:500px;border-radius:15px; margin-bottom: 10px;">
                </div>



               <div class="show-edits">
                    <p><b><%= listing.title %> </b></p> 
                    <p>Owner by@:<i><%= listing.owner.username  %></i></p>
                   <p><%= listing.description %> </p>
                   <p>Price: &#8377;<%= listing.price.toLocaleString("en-IN") %> per night </p>
                   <p>Location: <%= listing.location %>, <%= listing.country %>
                </div></p>
                    
                <div class="show-edits ">
                    <button class="btn btn-dark btn-listing"><a href="/listings">Back</a></button>
                  <% if(currUser && listing.owner._id.equals(currUser._id)) {%>  
                   <button class="btn btn-dark btn-elisting"><a href="/listings/<%= listing._id %>/edit">Edit This Listing</a></button>
                   <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">

                   <button class="btn btn-dark btn-delete" type="submit" onclick="return confirm('Are you sure you want to delete this listing?');">Delete This Listing</button>
                </form>
                <% } %>
                </div><hr>




               <% if(currUser) {%>
                <div class="show-edits ">
                    <h4>Leave a Review</h4>
                    <form method="POST" action="/listings/<%= listing.id %>/reviews" novalidate class="needs-validation" >
                        <div>
                            <label for="rating" class="form-label">Rating</label>
                            <input type="range" min="1" max="5" id="rating" name="review[rating]"/>
                        </div>
                        <div>
                            <label for="comment">Comment</label>
                            <textarea name="review[comment]" id="comment"
                            placeholder="Give your feedback"
                            cols="30"
                            rows="5"
                            class="form-control" 
                            required></textarea>
                            <div class="invalid-feedback">
                                Please give some feedback for review
                            </div>
                        </div><br>
                        <button class="btn btn-outline-dark">Submit</button>
                    </form>
                    <% } %>
                    <hr>
                    <p><b>All Reviews</b></p>
                     <div class="row">
                      <%   for(review of listing.reviews) { %>
                        <div class="card col-5 ms-3 mb-3">
                            <div class="card-body">
                                <h5 class="card-title">@: <%= review.author.username  %></h5>
                                <p class="card-text"><%= review.comment %></p>
                                <p class="card-text"><%= review.rating%> starts</p>
                            </div>
                            <form class="mb-3" method="POST" action="/listings/<%= listing._id  %>/Reviews/<%= review._id  %>?_method=DELETE">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        </div> 
                        <% } %>
                      </div>
                </div>
            </div>
        </div>
    </div>

</body>
