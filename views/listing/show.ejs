<% layout("/layouts/boilerplate") %>
<script>
    const mapToken = '<%= process.env.MAP_TOKEN %>'; 
    const listing = <%- JSON.stringify(listing) %>;
</script>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2 ">
                <div class="card col-10 offset-1  show-card">
                    <div class="show-edits">
                        <h2>Detail @: <b>
                                <%= listing.title %>
                            </b> </h2>
                        <img src="<%= listing.image.url %>" alt="Listing Image"
                            style="width:670px;height:500px;border-radius:15px; margin-bottom: 10px;">
                    </div>



                    <div class="show-edits">
                        <p><b>
                                <%= listing.title %>
                            </b></p>
                        <p>Owner by@:<i>
                                <%= listing.owner.username %>
                            </i></p>
                        <p>
                            <%= listing.description %>
                        </p>
                        <p>Price: &#8377;<%= listing.price.toLocaleString("en-IN") %> per night </p>
                        <p>Location: <%= listing.location %>, <%= listing.country %></p>
                    </div>
                    

                    <div class="show-edits ">
                        <button class="btn btn-dark btn-listing"><a href="/listings">Back</a></button>

                        <button class="btn btn-dark btn-elisting"><a href="/listings/<%= listing._id %>/edit">Edit
                                This Listing</a></button>
                        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST"
                            style="display:inline;">

                            <button class="btn btn-dark btn-delete" type="submit"
                                onclick="return confirm('Are you sure you want to delete this listing?');">Delete
                                This Listing</button>
                        </form>

                    </div>
                    <hr>




                    <% if(currUser) {%>
                        <div class="show-edits ">
                            <h4>Leave a Review</h4>
                            <form method="POST" action="/listings/<%= listing.id %>/reviews" novalidate
                                class="needs-validation">
                                <div>
                                    <label for="rating" class="form-label">Rating</label>
                                    <fieldset class="starability-heartbeat">
                                        <input type="radio" id="rating" class="input-no-rate" name="review[rating]"
                                            value="1" checked aria-label="No rating." />
                                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                        <label for="first-rate1" title="Terrible">1 star</label>
                                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                        <label for="first-rate2" title="Not good">2 stars</label>
                                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                        <label for="first-rate3" title="Average">3 stars</label>
                                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                        <label for="first-rate4" title="Very good">4 stars</label>
                                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                        <label for="first-rate5" title="Amazing">5 stars</label>
                                    </fieldset>
                                </div>
                                <div>
                                    <label for="comment">Comment</label>
                                    <textarea name="review[comment]" id="comment" placeholder="Give your feedback"
                                        cols="30" rows="5" class="form-control" required></textarea>
                                    <div class="invalid-feedback">
                                        Please give some feedback for review
                                    </div>
                                </div><br>
                                <button class="btn btn-outline-success ">Submit</button>
                            </form>
                            <% } %>
                                <% if(listing.reviews.length> 0){ %>
                                    <hr>
                                    <p><b>All Reviews</b></p>
                                    <div class="row">
                                        <% for(review of listing.reviews) { %>
                                            <div class="card col-5 ms-3 mb-3">
                                                <div class="card-body">
                                                    <h5 class="card-title">@: <%= review.author.username %>
                                                    </h5>
                                                    <p class="card-text">
                                                        <%= review.comment %>
                                                    </p>
                                                    <p class="starability-result card-text"
                                                        data-rating="<%= review.rating%>"></p>
                                                </div>
                                                <form class="mb-3" method="POST"
                                                    action="/listings/<%= listing._id  %>/Reviews/<%= review._id  %>?_method=DELETE">
                                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                                </form>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %>
                        </div>
                    </div>
                    <div class="col-12 mb-5">
                        <h3>where you'll be</h3>
                        <div id="map"></div>
                    </div>
                </div>
            </div>
                  <script src="/js/map.js"></script>
                       
    </body>